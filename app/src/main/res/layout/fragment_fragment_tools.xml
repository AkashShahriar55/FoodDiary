<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.akash.fooddiary.FragmentTools">

    <!-- TODO: Update blank fragment layout -->

    <RelativeLayout
        android:id="@+id/bodyfat"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/button_ripple"
        android:padding="20dp"
        android:layout_alignParentTop="true"
        android:clickable="true">
        <ImageView
            android:id="@+id/bdyfaticon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/ic_noun_41038_cc" />
        <TextView
            android:id="@+id/bdyfattext"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/bdyfaticon"
            android:text="Body Fat Calculator"
            android:textSize="20sp"
            android:layout_marginLeft="20dp"
            android:textStyle="bold"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/bdyfattext"
            android:layout_toRightOf="@id/bdyfaticon"
            android:layout_alignLeft="@+id/bdyfattext"
            android:layout_marginTop="5dp"
            android:text="The Body Fat Calculator can be used to estimate your total body fat based on specific measurements"/>
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/bmr"
        android:layout_below="@+id/bodyfat"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/button_ripple2"
        android:padding="20dp"
        android:layout_marginTop="10dp"
        android:clickable="true">
        <ImageView
            android:id="@+id/bmricon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/batticon" />
        <TextView
            android:id="@+id/bmrtxt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/bmricon"
            android:text="BMR Calculator"
            android:textSize="20sp"
            android:layout_marginLeft="20dp"
            android:textStyle="bold"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/bmrtxt"
            android:layout_toRightOf="@id/bmricon"
            android:layout_alignLeft="@+id/bmrtxt"
            android:layout_marginTop="5dp"
            android:text="BMR (Basal Metabolic Rate) represents an estimate of calories burned while resting."/>
    </RelativeLayout>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/bmr"
        android:text="Developed By\nNasib Shahriar Akash\nCSE 1507071"
        android:textAlignment="center"
        android:layout_marginTop="30dp"
        />


</RelativeLayout>
